<h1><%= @user.username.capitalize %>'s Personal Playlists</h1>
<br/><br/>
Email: <%= @user.email %>

<noscript>
	<h2>Playlist:</h2>
	<ul class='searchableList'>
		<% @playlists.each do |playlist| %>
			<li><%= link_to playlist.name, playlist_path(playlist) %></li>
		<% end %>
	</ul>
	<br/>
		<%= render '/playlists/new' if @playlist %>
</noscript>

<%= react_component('Playlists', { playlists: @playlists, formAccess: !@playlist.nil? }) %>